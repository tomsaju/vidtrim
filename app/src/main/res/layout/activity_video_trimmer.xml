<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="trial.testy.videocutter.VideoTrimmerActivity">

    <com.jaygoo.widget.RangeSeekBar
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:rsb_min="-1"
        app:rsb_max="1"
        app:rsb_mode="range"
        app:rsb_progress_height="4dp"
        app:rsb_progress_color="@color/colorAccent"
        app:rsb_progress_default_color="@color/rsbColorSeekBarDefault"
        app:rsb_tick_mark_text_margin="17dp"
        app:rsb_tick_mark_mode="number"
        app:rsb_thumb_size="20dp"
       app:rsb_indicator_padding_bottom="10dp"
        app:rsb_indicator_width="40dp"
        app:rsb_indicator_height="40dp"
        android:id="@+id/seekBar"/>

    <LinearLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="10dp"
        >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="10"
    android:orientation="horizontal">
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="00:00"/>


        <com.jaygoo.widget.RangeSeekBar
            android:id="@+id/seekbar5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="8"
            app:rsb_mode="range"
            app:rsb_progress_height="4dp"
            app:rsb_progress_radius="0dp"
            app:rsb_progress_default_color="@color/rsbColorThumbPressed"
            app:rsb_progress_color="@color/colorProgress"
            app:rsb_tick_mark_text_margin="17dp"
            app:rsb_tick_mark_number="1"
            app:rsb_tick_mark_mode="number"
            app:rsb_tick_mark_gravity="center"
            app:rsb_tick_mark_text_color="@color/colorProgress"
            app:rsb_indicator_height="20dp"
            app:rsb_thumb_size="30dp"
            app:rsb_thumb_drawable="@drawable/thumb_yellow"
            app:rsb_indicator_show_mode="showWhenTouch"
            app:rsb_range_interval="1"
            app:rsb_indicator_padding_left="10dp"
            app:rsb_indicator_padding_right="10dp"
            />
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:text="30:00"/>

</LinearLayout>
    </LinearLayout>
</RelativeLayout>
